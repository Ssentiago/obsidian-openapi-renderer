{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "baseUrl": "./src",
    "outDir": "dist/",
    "module": "ESNext",
    "target": "ESNext",
    "allowJs": false,
    "strict": true,
    "removeComments": true,
    "noImplicitAny": true,
    "moduleResolution": "node",
    "importHelpers": false,
    "isolatedModules": true,
    "allowSyntheticDefaultImports": true,
    "strictNullChecks": true,
    "lib": ["DOM", "ES5", "ES6", "ES7"],
    "typeRoots": ["node_modules/@types",
      "src/typing/interfaces"
    ]
  },
  "include": [
    "src/**/*.ts",
    "obsidian-extensions.d.ts",
  ],
  "buildOptions": {
    "incremental": true
  }
}