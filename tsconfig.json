{
  "compilerOptions": {
    "baseUrl": "./src",
    "module": "ESNext",
    "target": "ESNext",
    "allowJs": false,
    "strict": true,
    "noImplicitAny": true,
    "moduleResolution": "node",
    "importHelpers": false,
    "isolatedModules": true,
    "allowSyntheticDefaultImports": true,
    "strictNullChecks": true,
    "lib": ["DOM", "ES5", "ES6", "ES7"],
    "plugins": [{ "name": "typescript-plugin-css-modules" }]
  },
  "include": [
    "src/**/*.ts",
    "obsidian-extensions.d.ts",
    "Globals.d.ts"
  ]
}
